<%= form_for [:admin, @course] do |f| %>
  <%= render "shared/error_messages", object: @course %>

  <div class="container" style="margin-top:40px">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default panel-table">
          <div class="panel-heading">
            <div class="tr">
              <div class="td"><%= t "supervisor_of_course" %></div>
              <div class="td"><%= t "trainee_in_course" %></div>
            </div>
          </div>
          <div class="panel-body">
            <div class="tr">
              <div class="td">
                <%= f.collection_check_boxes :supervisor_ids, User.supervisors.all,
                  :id, :name, hide_label: true %>
              </div>
              <div class="td">
                <div style="overflow:scroll; height:300px">
                  <%= f.collection_check_boxes :trainee_ids, User.trainee.all,
                    :id, :name, hide_label: true %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%= f.submit t("Admin.assign_user"), class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
