<div class="col-md-13 pull-right">
  <center>
    <h1><%= t "User.activity" %></h1>
    <% @activities.each do |activity| %>
      <%= activity.content %>
      <% if Settings.activity.joined == activity.content %>
        <%= t "User.In_course" %>
      <% elsif Settings.activity.learn == activity.content %>
        <%= t "Admin.subject" %>
      <% else %>
        <%= t "Admin.task" %>
      <% end %>
      <%= activity.created_at %><br/>
    <% end %>
  </center>
</div>
